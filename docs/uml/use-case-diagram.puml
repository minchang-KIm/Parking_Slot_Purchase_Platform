@startuml 주차_플랫폼_유스케이스_다이어그램

left to right direction
skinparam packageStyle rectangle

actor "일반 사용자" as User
actor "공간 제공자" as Provider
actor "관리자" as Admin
actor "결제 시스템" as Payment

rectangle "주차 거래 플랫폼" {
  ' 사용자 기능
  usecase "회원가입" as UC1
  usecase "로그인" as UC2
  usecase "프로필 관리" as UC3
  usecase "주차공간 검색" as UC4
  usecase "주차공간 상세 조회" as UC5
  usecase "주차공간 예약" as UC6
  usecase "예약 취소" as UC7
  usecase "결제 진행" as UC8
  usecase "예약 내역 조회" as UC9
  usecase "리뷰 작성" as UC10
  usecase "리뷰 조회" as UC11

  ' 제공자 기능
  usecase "주차공간 등록" as UC12
  usecase "주차공간 수정" as UC13
  usecase "주차공간 삭제" as UC14
  usecase "예약 확인" as UC15
  usecase "수익 조회" as UC16
  usecase "리뷰 응답" as UC17

  ' 관리자 기능
  usecase "사용자 관리" as UC18
  usecase "주차공간 승인" as UC19
  usecase "대시보드 조회" as UC20
  usecase "통계 확인" as UC21
  usecase "리뷰 관리" as UC22
  usecase "결제 내역 관리" as UC23
}

' 관계 설정
User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6
User --> UC7
User --> UC8
User --> UC9
User --> UC10
User --> UC11

Provider --> UC12
Provider --> UC13
Provider --> UC14
Provider --> UC15
Provider --> UC16
Provider --> UC17

Admin --> UC18
Admin --> UC19
Admin --> UC20
Admin --> UC21
Admin --> UC22
Admin --> UC23

UC8 --> Payment : uses
UC6 ..> UC8 : includes
UC10 ..> UC9 : extends

Provider --|> User : is a
Admin --|> User : is a

@enduml
